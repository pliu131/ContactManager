<p id="notice"><%= notice %></p>

<p>
  <strong>First name:</strong>
  <%= @person.first_name %>
</p>

<p>
  <strong>Last name:</strong>
  <%= @person.last_name %>
</p>

<ul>
  <% @person.phone_numbers.each do |phone| %>
    <li><%= phone.number %> <%= link_to 'edit phone number', edit_phone_number_path(phone) %></li>
    <li><%= phone.number %> <%= link_to 'delete phone number', phone_number_path(phone), method: :delete, data: { confirm: "Are you sure you want to do that?"} %></li>
  <% end %>
</ul>

<ul>
  <% @person.email_addresses.each do |email| %>
    <li><%= email.address %> <%= link_to 'edit email address', edit_email_address_path(email) %></li>
    <li><%= email.address %> <%= link_to 'delete email address', email_address_path(email), method: :delete, data: { confirm: "Are you sure you want to do that?" } %></li>
  <% end %>
</ul>

<%= link_to 'Add phone number', new_phone_number_path(person_id: @person.id) %>
<%= link_to 'Add email address', new_email_address_path(person_id: @person.id) %>
<%= link_to 'Edit', edit_person_path(@person) %> |
<%= link_to 'Back', people_path %>
